<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lyrical.loginActivity"
    android:background="@color/prettyPink">


    <TextView
        android:id="@+id/title_text"
        android:layout_width="220dp"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="102dp"
        android:layout_marginEnd="102dp"
        android:layout_marginTop="25dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="Login Page"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"

        />
    

    <EditText
        android:id="@+id/email"
        android:layout_width="375dp"
        android:layout_height="66dp"
        android:layout_below="@id/title_text"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="74dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/white"
        android:drawablePadding="10dp"
        android:hint="Email:"
        android:inputType="textEmailAddress"
        android:paddingBottom="20dp"
        android:textColorHint="@color/white" />



    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_centerVertical="true"
        android:layout_marginTop="27dp"
        android:textColorHint="@color/white"
        android:textStyle="bold"
        app:passwordToggleEnabled="true"

        >

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="20dp"
            android:drawablePadding="10dp"
            android:hint="Password:"
            android:backgroundTint="@color/white"
            android:inputType="textPassword"
            android:paddingBottom="20dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/submitbutton"
        android:layout_width="197dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_gravity="bottom"
        android:layout_marginStart="115dp"
        android:layout_marginTop="417dp"
        android:layout_marginEnd="114dp"

        android:layout_marginBottom="114dp"
        android:background="@drawable/roundbutton"
        android:text="Login"
        android:textColor="@color/prettyPink"
        android:textStyle="bold"
        android:theme="@style/myButtonTheme" />

    <TextView
        android:id="@+id/forgotp"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom"
        android:layout_marginStart="265dp"

        android:layout_marginTop="316dp"
        android:layout_marginEnd="4dp"
        android:text="Forgot Password"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:layout_width="218dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom"
        android:layout_marginStart="102dp"

        android:layout_marginTop="604dp"
        android:layout_marginEnd="91dp"
        android:text="Don't have an Account?"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:layout_width="23dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"

        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="9dp"
        android:layout_marginTop="685dp"
        android:layout_marginEnd="378dp"
        android:text="or"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/guestbutton"
        android:layout_width="197dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_gravity="bottom"
        android:layout_marginStart="114dp"
        android:layout_marginTop="493dp"
        android:layout_marginEnd="114dp"
        android:background="@drawable/roundbutton"
        android:text="Continue as Guest"
        android:textColor="@color/prettyPink"
        android:textStyle="bold"
        android:theme="@style/myButtonTheme" />

    <TextView
        android:id="@+id/register"
        android:layout_width="218dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom"
        android:layout_marginStart="262dp"

        android:layout_marginTop="604dp"
        android:layout_marginEnd="-69dp"
        android:text="Sign up!"
        android:textColor="@color/black"
        android:textStyle="bold" />

</RelativeLayout>