<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/prettyPink"
    tools:context="com.example.lyrical.MainActivity">


    <TextView
        android:id="@+id/title_text"
        android:layout_width="270dp"
        android:layout_height="195dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="62dp"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Welcome to Lyrical!"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="40dp" />


    <ImageView
        android:layout_width="370dp"
        android:layout_height="149dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="216dp"
        android:layout_marginEnd="19dp"
        android:background="@color/prettyPink"
        android:src="@drawable/lyric"
        app:tint="@color/white" />

    <Button
        android:id="@+id/sbutton"
        android:layout_width="258dp"
        android:layout_height="69dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_gravity="bottom"
        android:layout_marginStart="74dp"
        android:layout_marginTop="469dp"
        android:background="@drawable/roundbutton"
        android:text="Begin"
        android:textColor="@color/prettyPink"
        android:textSize="16dp"
        android:textStyle="bold"
        android:theme="@style/myButtonTheme" />


</RelativeLayout>
